WSGIApplicationGroup %{GLOBAL}
WSGIDaemonProcess {{ django_project_name }}-1 threads=10 display-name=%{GROUP} python-home={{ virtualenv_folder }}/{{ django_virtualenv_name }} python-path={{ django_project_parent_folder }}/{{ django_project_name }} 

# set python path as part of WSGIDaemonProcess --> WSGIDaemonProcess {{ django_project_name }}-1 ... python-path=
# no virtualenv
# ... python-path={{ django_project_parent_folder }}/{{ django_project_name }}
# virtualenv, place the root of the virtualenv in a separate python-home property:
# ... python-home={{ virtualenv_folder }}/{{ django_virtualenv_name }} python-path={{ django_project_parent_folder }}/{{ django_project_name }}

WSGIProcessGroup {{ django_project_name }}-1
WSGIScriptAlias /{{ django_project_name }} {{ django_project_parent_folder }}/{{ django_project_name }}/{{ django_project_name }}/wsgi.py process-group={{ django_project_name }}-1
        
<Directory {{ django_project_parent_folder }}/{{ django_project_name }}/{{ django_project_name }}>
    <Files wsgi.py>
        # apache 2.4:
        Require all granted
        # apache 2.2 or earlier:
        #Order deny,allow
        #Allow from all
    </Files>
</Directory>
